@model Bar.Models.Beer
@{
    ViewData["Title"] = "@Model.Name";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var base64 = Convert.ToBase64String(Model.Picture);
    var Image = String.Format("data:image/gif;base64,{0}", base64);
}

<h1>@Model.Name</h1>
<img src="@Image" />
<hr />
@foreach(Bar.Models.BeerPatron beerPatron in Model.BeerPatrons.ToList())
{
    <div class="card">
        <div class="card-content">
            <h4><a href="/Beers/Details/">@beerPatron.Patron.Name</a></h4>
        </div>
    </div>
}